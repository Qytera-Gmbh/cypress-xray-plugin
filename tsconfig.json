{
    "include": ["**/*.ts"],
    "exclude": ["node_modules/", "dist/"],
    "compilerOptions": {
        "allowJs": true,
        "declaration": true,
        "esModuleInterop": true,
        "lib": ["ESNext"],
        "module": "NodeNext",
        "outDir": "dist",
        "skipLibCheck": true,
        "strict": true,
        "target": "ESNext",
        "types": ["node", "cypress"],
    },
}
