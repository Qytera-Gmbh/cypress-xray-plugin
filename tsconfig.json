{
    "include": ["**/*.ts"],
    "exclude": ["node_modules/", "dist/"],
    "compilerOptions": {
        "target": "ESNext",
        "module": "CommonJS",
        "declaration": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "moduleResolution": "Node",
        "lib": ["ESNext", "DOM"],
        "types": ["cypress", "node"],
        "allowJs": true
    }
}
