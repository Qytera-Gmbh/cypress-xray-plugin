{
    "name": "cypress-xray-plugin",
    "version": "5.1.1",
    "description": "A Cypress plugin for uploading test results to Xray (test management for Jira)",
    "types": "index.d.ts",
    "author": "csvtuda",
    "repository": {
        "type": "git",
        "url": "https://github.com/Qytera-Gmbh/cypress-xray-plugin"
    },
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/Qytera-Gmbh/cypress-xray-plugin/issues"
    },
    "homepage": "https://qytera-gmbh.github.io/projects/cypress-xray-plugin",
    "keywords": [
        "cypress",
        "xray",
        "upload",
        "screenshot",
        "video",
        "cucumber"
    ],
    "files": [
        "src",
        "*.js",
        "*.ts"
    ],
    "exports": {
        ".": "./index.js",
        "./register": "./src/register.js"
    },
    "directories": {
        "lib": "src"
    },
    "scripts": {
        "test": "mocha",
        "coverage": "nyc --reporter=html --exclude=**/*.spec.ts --exclude=test/ mocha",
        "build": "tsc --project tsconfigBuild.json && shx cp package.json README.md LICENSE.md CHANGELOG.md dist/"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "dependencies": {
        "@cucumber/gherkin": "^27.0.0",
        "@cucumber/messages": "^22.0.0",
        "axios": "^1.5.1",
        "chalk": "^4.1.2",
        "decompress": "^4.2.1",
        "form-data": "^4.0.0",
        "semver": "^7.5.4"
    },
    "peerDependencies": {
        "cypress": ">=10.0.0 < 14"
    },
    "optionalDependencies": {
        "@badeball/cypress-cucumber-preprocessor": "^18.0.6"
    },
    "devDependencies": {
        "@types/chai": "^4.3.8",
        "@types/chai-as-promised": "^7.1.6",
        "@types/decompress": "^4.2.5",
        "@types/mocha": "^10.0.2",
        "@types/sinon-chai": "^3.2.10",
        "@typescript-eslint/eslint-plugin": "^6.7.4",
        "@typescript-eslint/parser": "^6.7.4",
        "chai": "^4.3.10",
        "chai-as-promised": "^7.1.1",
        "eslint": "^8.51.0",
        "eslint-plugin-tsdoc": "^0.2.17",
        "mocha": "^10.2.0",
        "nyc": "^15.1.0",
        "shx": "^0.3.4",
        "sinon": "^16.0.0",
        "sinon-chai": "^3.7.0",
        "ts-node": "^10.9.1",
        "typescript": "^5.1.6"
    }
}
